#pragma once

namespace hestia::project_config
{
    [[maybe_unused]] static std::string get_project_name()
    {
        return "@PROJECT_NAME@";
    }

    [[maybe_unused]] static std::string get_project_version()
    {
        return "@PROJECT_VERSION@";
    }

    [[maybe_unused]] static std::string get_hestia_plugin_path()
    {
        return "@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@/@PROJECT_NAME@";
    }
}